{
    "name": "annervisser/issue-tracker-api",
    "description": "Api for personal issue tracking project",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Anner Visser",
            "email": "annervisser@gmail.com"
        }
    ],
    "scripts": {
        "check": [
            "@test",
            "@composer-require-checker",
            "@deptrac",
            "@phpcs",
            "@psalm",
            "@phpstan",
            "@infection"
        ],
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "test": "phpunit --colors=always",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-clover clover.xml",
        "phpcbf": "phpcbf",
        "phpcs": "phpcs",
        "phpcs-fix": "@phpcbf",
        "infection": "infection",
        "psalm": "psalm",
        "phpstan": "phpstan",
        "composer-require-checker": "composer-require-checker",
        "deptrac": "deptrac"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src/Core",
            "Shared\\": "src/Shared/"
        }
    },
    "autoload-dev": {
        "ContentTest\\": "test/unit/Content",
        "SharedTest\\": "test/unit/Shared"
    },
    "require": {
        "php": "^8.1.0",
        "ext-bcmath": "*",
        "ext-gmp": "*",
        "ext-igbinary": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-uuid": "*",
        "doctrine/annotations": "^1.13.2",
        "doctrine/event-manager": "^1.1.1",
        "doctrine/orm": "^2.11.2",
        "monolog/monolog": "^2.3.5",
        "nyholm/psr7": "^1.5.0",
        "nyholm/psr7-server": "^1.0.2",
        "php-di/php-di": "^6.3.5",
        "psr/http-message": "^1.0.1",
        "psr/log": "^3.0.0",
        "ramsey/uuid": "^4.2.3",
        "ramsey/uuid-doctrine": "^1.8.1",
        "slim/slim": "^4.9.0",
        "symfony/cache": "^6.0.6",
        "webmozart/assert": "^1.10.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0.0",
        "infection/infection": "^0.26.0",
        "maglnet/composer-require-checker": "^4.0.0",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^1.4.9",
        "phpstan/phpstan-doctrine": "^1.2.11",
        "phpstan/phpstan-phpunit": "^1.0.0",
        "phpstan/phpstan-webmozart-assert": "^1.1.0",
        "phpunit/phpunit": "^9.5.18",
        "psalm/plugin-phpunit": "^0.16.1",
        "qossmic/deptrac-shim": "^0.19.3",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.6.2",
        "vimeo/psalm": "^4.22.0"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "apcu-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        }
    }
}
